<!DOCTYPE html>
<html>
  <head>
    <title>FridgeArt</title>
    <%= csrf_meta_tags %>

    <!-- Bootstrap -->
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <!-- Start Responsive Nav -->
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed collapsed-menu" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">FridgeArt</a>
      </div>

      <div class="collapse navbar-collapse" id="navbar-collapse-1">
        <% if current_user %>
          <ul class="nav navbar-nav">
            <li><%= link_to "Add Photo", user_children_path(current_user) %></li>
          </ul>
        <% end %>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Log Out", logout_path %></li>
          <% else %>
            <li><%= link_to "Create Account", new_user_path %></li>
            <li><%= link_to "Log In", login_path %></li>
          <% end %>
        </ul>
      </div><!-- End Navbar Collapse -->
    </div><!-- End Container Fluid -->
  </nav><!-- End Responsive Nav -->

  <!-- Start Flash Errors -->
  <% if flash[:error] %>
    <div class="container small-container">
      <div class="alert alert-danger">
        <%= flash[:error] %>
      </div>
    </div>
  <% end %>

  <% if flash[:success] %>
    <div class="container small-container">
      <div class="alert alert-success">
        <%= flash[:success] %>
      </div>
    </div>
  <% end %><!-- End Flash Errors -->

    <%= yield %>

    <!-- Bootstrap Minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

  </body>
</html>
