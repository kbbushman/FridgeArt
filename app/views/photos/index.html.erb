<h1><%= @gallery.gallery_name %> Photos</h1>
<ul>
	<% @photo.each do |p| %>
    <li><%= link_to(image_tag(p.image.url(:thumb)), user_child_gallery_photo_path(@user, @child, @gallery, p)) %><br />
    <% if current_user == @child.user %>
    	<%= link_to p.photo_name, user_child_gallery_photo_path(@user, @child, @gallery, p) %> <%= link_to 'Edit', edit_user_child_gallery_photo_path(@user, @child, @gallery, p), class: 'button' %> <%= link_to 'Delete', user_child_gallery_photo_path(@user, @child, @gallery, p), method: :delete, class: 'button delete-button', data: { confirm: 'Are you sure you want to delete this photo?' } %></li>
    <% end %>
  <% end %>
</ul>
