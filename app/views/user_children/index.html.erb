<section id="all-children">
	<h1>All Children</h1>
	<ul class="all-children-list">
		<% @children.each do |c| %>
      <li>
      	<%= link_to 'Placeholder', all_child_path(@user, c), class: 'image-placeholder' %>
      	<%= link_to c.child_name, all_child_path(@user, c), class: 'child-name' %>
      	<%= link_to 'Delete', all_child_path(@user, c), method: :delete, class: 'button small-delete', data: { confirm: 'Are you sure you want to delete this child?' } %>
      	<%= link_to 'Edit', edit_all_child_path(@user, c), class: 'button small-edit' %>
    	</li>
    <% end %>
  </ul>
	<%= link_to 'Add New Child', new_all_child_path, class: 'button' %>
</section>
