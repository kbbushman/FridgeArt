<h1><%= @child.child_name %></h1>

<ul>
	<% @galleries.each do |g| %>
    <li><%= link_to g.gallery_name, user_gallery_path(@user, g) %>
    	<% if current_user == @user %>
    		<%= link_to 'Edit', edit_user_gallery_path(@user, g), class: 'button delete-button' %> <%= link_to 'Delete', user_gallery_path(@user, g), method: :delete, class: 'button delete-button', data: { confirm: 'Are you sure you want to delete this gallery?' } %></li>
    	<% end %>
    </li>
  <% end %>
</ul>

<% if current_user == @user %>
	<p><%= link_to 'Add New Gallery', new_user_gallery_path(@user), class: 'button' %></p>
<% end %>
