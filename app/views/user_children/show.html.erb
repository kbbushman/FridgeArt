<section id="all-galleries">
	<h1><%= @child.child_name %></h1>
	<ul class="all-galleries-list">
		<% @galleries.each do |g| %>
	    <li>
		    <%= link_to g.gallery_name, user_gallery_path(@user, g) %>
		    <%= link_to 'Placeholder', user_gallery_path(@user, g), class: 'gallery-image-placeholder' %>
	    	<% if current_user == @user %>
	    		<%= link_to 'Delete', user_gallery_path(@user, g), method: :delete, class: 'button small-delete', data: { confirm: 'Are you sure you want to delete this gallery?' } %>
	    		<%= link_to 'Edit', edit_user_gallery_path(@user, g), class: 'button small-edit' %>
	    	<% end %>
	    </li>
	  <% end %>
	</ul>
	<% if current_user == @user %>
		<%= link_to 'Add New Gallery', new_user_gallery_path(@user), class: 'button' %>
	<% end %>
</section>
