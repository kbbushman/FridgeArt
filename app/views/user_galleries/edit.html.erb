<div class="form-container">

	<h1>Edit <%= @gallery.gallery_name %></h1>
	<%= form_for @gallery, url: user_gallery_path(@user) do |f| %>
		<div class="input-field">
			<%= f.text_field :gallery_name, placeholder: "Gallery Name", class: 'value' %>
		</div>
		<div class="float-fix">
			<%= f.submit "Save", class: 'button submit-button right' %>
			<%= link_to 'Cancel', :back, class: 'button cancel-button right' %>
		</div>
	<% end %>

</div>
