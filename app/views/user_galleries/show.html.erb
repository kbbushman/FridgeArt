<section id="all-galleries">
	<h1><%= @gallery.gallery_name %></h1>
	<ul class="all-galleries-list">
		<% @photo.each do |p| %>
	    <li>
	    	<%= link_to p.photo_name, all_photo_path(@user, p) %>
		    <%= link_to(image_tag(p.image.url(:thumb)), all_photo_path(@user, p), class: 'photo-margin') %>
		    <% if current_user == @user %>
		    	<div class="buttons">
			    	<%= link_to 'Delete', all_photo_path(@user, p), method: :delete, class: 'button small-delete', data: { confirm: 'Are you sure you want to delete this photo?' } %>
			    	<%= link_to 'Edit', edit_all_photo_path(@user, p), class: 'button small-edit' %>
		    	</div>
		    <% end %>
    	</li>
	  <% end %>
	</ul>
	<% if current_user == @user %>
		<div class="buttons">
			<%= link_to 'Add Photo', new_all_photo_path(@user, @gallery), class: 'button' %>
		</div>
	<% end %>
</section>
