<h1>All Photos</h1>

<ul>
	<% @photos.each do |p| %>
    <li><%= link_to(image_tag(p.image.url(:thumb)), all_photo_path(@user, p)) %><br />
    <% if current_user == @user %>
    	<%= link_to p.photo_name, all_photo_path(@user, p) %> <%= link_to 'Edit', edit_all_photo_path(@user, p), class: 'button' %> <%= link_to 'Delete', all_photo_path(@user, p), method: :delete, class: 'button delete-button', data: { confirm: 'Are you sure you want to delete this photo?' } %></li>
    <% end %>
  <% end %>
</ul>
