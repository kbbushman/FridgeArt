<h1>Add New Photo</h1>

<%= form_for @photo, url: user_gallery_path(@user, @gallery) do |f| %>
  <div class="container-gray">
    <div class="input-field">
      <%= f.file_field :image %>
    </div>
    <div class="input-field">
      <%= f.text_field :photo_name, placeholder: "Photo Name" %>
    </div>
    <div class="input-field">
      <%= f.text_field :photo_description, placeholder: "Photo Description" %>
    </div>
    <p><%= link_to 'Cancel', :back, class: 'button' %></p>
    <%= f.submit "Add Photo", class: "button submit-button" %>
  </div>
<% end %>
